global:
  scrape_interval:     15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheusprod'
    scrape_interval: 5s
    static_configs:
      - targets: ['{{ record_name }}']
  - job_name: 'prometheustest'
    scrape_interval: 5s
    static_configs:
      - targets: ['{{ record_name }}']
  - job_name: 'node_exporter_prod'
    scrape_interval: 5s
    static_configs:
      - targets: ['{{ record_name }}:9100']
  - job_name: 'node_exporter_test'
    scrape_interval: 5s
    static_configs:
      - targets: ['{{ record_name }}:9100']
